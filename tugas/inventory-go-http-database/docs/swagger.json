{
    "openapi": "3.0.0",
    "info": {
        "title": "Inventory Go",
        "version": "1.0",
        "description": "Untuk tugas inventory go pada golang trainee",
        "contact": {
            "name": "Adli",
            "email": "adlihozian1@gmail.com",
            "url": "https://github.com/adlighozian/go-phincon_trainee/tree/main/tugas/inventory-go-http-database"
        }
    },
    "servers": [
        {
            "description": "Inventory Api Server",
            "url": "http://localhost:{port}",
            "variables": {
                "port": {
                    "description": "Server Port",
                    "default": "5000",
                    "enum": [
                        "5000",
                        "3000",
                        "4880"
                    ]
                }
            }
        }
    ],
    "paths": {
        "/product": {
            "get": {
                "summary": "Get List Product",
                "description": "Get list product",
                "responses": {
                    "200": {
                        "description": "Success Get List Product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/product.list"
                                },
                                "examples": {
                                    "success": {
                                        "description": "Example Success Get List Product",
                                        "value": {
                                            "Status": 200,
                                            "Message": "oke",
                                            "Data": [
                                                {
                                                    "Item": "Laptop",
                                                    "Price": 15000000,
                                                    "From": "Ardhi",
                                                    "Total": 5
                                                },
                                                {
                                                    "Item": "Handphone",
                                                    "Price": 5000000,
                                                    "From": "Bagas",
                                                    "Total": 2
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tags": [
                    "Product"
                ]
            }
        },
        "/purchase/detail": {
            "post": {
                "summary": "Get Purchase Detail",
                "description": "Get Purchase Detail by Order Number",
                "requestBody": {
                    "$ref": "#/components/requestBodies/purchase.detail"
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/purchase.response"
                                },
                                "examples": {
                                    "success": {
                                        "description": "Example Success Get Detail Purchase Order",
                                        "value": {
                                            "Status": 200,
                                            "Message": "oke",
                                            "Data": {
                                                "Id": 35,
                                                "Item": "laptop 3",
                                                "Price": 1000,
                                                "Quantity": 5,
                                                "Total": 13,
                                                "Purchase": {
                                                    "Id": 38,
                                                    "OrderNumber": "JcX8yWw",
                                                    "From": "ari",
                                                    "Total": 5
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Resource not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                },
                                "examples": {
                                    "failed": {
                                        "description": "Example Resource not found Get Detail Purchase Order",
                                        "value": {
                                            "Status": 404,
                                            "Message": "Resource not found",
                                            "Data": null
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tags": [
                    "Purchase"
                ]
            }
        },
        "/purchase/input": {
            "post": {
                "summary": "Add Purchase",
                "description": "Add Purchase",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/request"
                            },
                            "examples": {
                                "Success": {
                                    "description": "Example Add Purchase Order Success",
                                    "value": [
                                        {
                                            "item": "Laptop",
                                            "price": 15000000,
                                            "from": "Ardhi",
                                            "total": 5
                                        }
                                    ]
                                },
                                "Failed": {
                                    "description": "Example Add Purchase Order Failed",
                                    "value": [
                                        {
                                            "items": "Laptop",
                                            "prices": 15000000,
                                            "froms": "Ardhi",
                                            "totals": 5
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/purchase.response"
                                },
                                "examples": {
                                    "success": {
                                        "description": "Example Success Get Detail Purchase Order",
                                        "value": {
                                            "Status": 200,
                                            "Message": "oke",
                                            "Data": [
                                                {
                                                    "Id": 35,
                                                    "Item": "Laptop",
                                                    "Price": 15000000,
                                                    "Quantity": 5,
                                                    "Total": 13,
                                                    "Purchase": {
                                                        "Id": 38,
                                                        "OrderNumber": "JcX8yWw",
                                                        "From": "Ardhi",
                                                        "Total": 5
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                },
                                "examples": {
                                    "failed": {
                                        "description": "Example Bad Request Input Purchase Orderr",
                                        "value": {
                                            "Status": 400,
                                            "Message": "Bad Request",
                                            "Data": null
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tags": [
                    "Purchase"
                ]
            }
        },
