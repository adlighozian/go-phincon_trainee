    "components": {
        "requestBodies": {
            "purchase.detail": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/order.detail"
                        },
                        "examples": {
                            "Success": {
                                "description": "Example Order Number Success",
                                "value": {
                                    "order": "JcX8yWw"
                                }
                            },
                            "Failed": {
                                "description": "Example Order Number Failed",
                                "value": {
                                    "order": "JcX8yWwas"
                                }
                            }
                        }
                    }
                }
            },
            "sales.detail": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/order.detail"
                        },
                        "examples": {
                            "Success": {
