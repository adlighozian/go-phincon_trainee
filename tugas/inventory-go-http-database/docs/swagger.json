                            }
                        }
                    }
                }
            },
            "sales.response": {
                "type": "object",
                "properties": {
                    "Id": {
                        "type": "integer"
                    },
                    "Item": {
                        "type": "string"
                    },
                    "Price": {
                        "type": "integer"
                    },
                    "Quantity": {
                        "type": "integer"
                    },
                    "Total": {
                        "type": "integer"
                    },
                    "Sales": {
                        "type": "object",
                        "properties": {
                            "Id": {
                                "type": "integer"
                            },
                            "OrderNumber": {
                                "type": "string"
                            },
                            "From": {
                                "type": "string"
                            },
                            "Total": {
                                "type": "integer"
                            }
                        }
                    }
                }
            },
            "request": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "item": {
                            "type": "string",
                            "minLength": 1
                        },
                        "price": {
                            "type": "integer"
                        },
                        "from": {
