        "schemas": {
            "order.detail": {
                "type": "object",
                "properties": {
                    "order": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "product.list": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "Item": {
                            "type": "string"
                        },
                        "Price": {
                            "type": "integer"
                        },
                        "From": {
                            "type": "string"
                        },
                        "Total": {
                            "type": "integer"
                        }
                    }
                }
            },
            "purchase.response": {
                "type": "object",
                "properties": {
                    "Id": {
                        "type": "integer"
                    },
                    "Item": {
                        "type": "string"
                    },
                    "Price": {
                        "type": "integer"
                    },
                    "Quantity": {
                        "type": "integer"
                    },
                    "Total": {
                        "type": "integer"
                    },
                    "Purchase": {
                        "type": "object",
                        "properties": {
                            "Id": {
                                "type": "integer"
                            },
                            "OrderNumber": {
                                "type": "string"
                            },
                            "From": {
                                "type": "string"
                            },
                            "Total": {
